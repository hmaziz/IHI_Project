PORT=5000
NODE_ENV=development

# CORS Configuration - Set to your frontend URL in production
CORS_ORIGIN=http://localhost:3000

# Hugging Face API Key
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
# Alternative: HF_TOKEN=your_huggingface_api_key_here

# Use a generic LLM via Inference API for better conversational responses (optional)
# Some models may require Inference Provider setup. Good free options:
# microsoft/DialoGPT-medium, gpt2, google/flan-t5-xxl
# Paid/pro models: meta-llama/Meta-Llama-3.1-8B-Instruct, mistralai/Mistral-7B-Instruct-v0.2
USE_GENERIC_LLM=true
FALLBACK_LLM_MODEL=microsoft/DialoGPT-medium

# Use Sarah0022/heart-disease-model for risk assessment (optional, defaults to true)
# This model is used alongside Framingham and PREVENT models
USE_HEART_DISEASE_MODEL=true
HEART_DISEASE_MODEL=Sarah0022/heart-disease-model

# FHIR Server Configuration
FHIR_SERVER_URL=http://localhost:8080/fhir

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Appwrite Configuration
APPWRITE_PROJECT_ID=your_project_id
APPWRITE_PROJECT_NAME=IHI-project
APPWRITE_ENDPOINT=https://sfo.cloud.appwrite.io/v1